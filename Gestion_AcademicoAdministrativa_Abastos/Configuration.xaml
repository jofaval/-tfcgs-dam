<Window x:Class="Gestion_AcademicoAdministrativa_Abastos.Configuration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestion_AcademicoAdministrativa_Abastos"
        WindowStartupLocation="CenterScreen"
        PreviewLostKeyboardFocus="Window_PreviewLostKeyboardFocus"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="Configuration" Height="800" Width="600">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF1E233E" Offset="0"/>
                <GradientStop Color="#FFE00065" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Label Content="Tamaño de la fuente" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
        <Slider x:Name="SliderFontSize" Grid.Column="1" Grid.Row="2"
                Minimum="8" Maximum="32"
                HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"
                ValueChanged="SliderFontSize_ValueChanged"/>
        <Label Content="Familia de la fuente" Grid.Column="1" Grid.Row="3" VerticalContentAlignment="Center" VerticalAlignment="Center" />
        <ComboBox x:Name="ComboBoxFontFamily" Grid.Column="1" Grid.Row="4" SelectionChanged="ComboBoxFontFamily_SelectionChanged"/>
        <Label Content="Tamaño de la Ventana" Grid.Column="1" Grid.Row="5" VerticalContentAlignment="Center" VerticalAlignment="Center" />
        <Slider x:Name="SliderWindowSize" Grid.Column="1" Grid.Row="6"
                Minimum="0" Maximum="5"
                TickFrequency="1" IsSnapToTickEnabled="True"
                HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"
                ValueChanged="ScreenSize_ValueChanged"
                AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0"/>
        <Button x:Name="BtnMaximize" Grid.Column="1" Grid.Row="7" Content="Maximizar/Minimizar" Click="BtnMaximize_Click"/>
        <Button x:Name="BtnClose" Grid.Column="1" Grid.Row="9" Content="Salir" Click="BtnClose_Click"/>
    </Grid>
</Window>
