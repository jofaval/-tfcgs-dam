<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Gestion_AcademicoAdministrativa_Abastos"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:font="http://schemas.microsoft.com/winfx/2006/xaml/composite-font">
    <sys:Double x:Key="StandardFontSize">15</sys:Double>
    <sys:Double x:Key="TitleFontSize">10</sys:Double>
    <FontFamily x:Key="StandardFontFamily">./#Ubuntu</FontFamily>

    <Style x:Key="SpecialTextControl" TargetType="{x:Type Control}">
        <Setter Property="Padding" Value="15, 0, 0, 0" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{DynamicResource StandardFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontStretch" Value="Normal" />
    </Style>
</ResourceDictionary>